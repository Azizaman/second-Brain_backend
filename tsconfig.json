{
  "compilerOptions": {
    "target": "ES2016",                                /* Set the JavaScript language version for emitted JavaScript. */
    "module": "ESNext",                                /* Use ESNext module system for modern imports/exports. */
    "rootDir": "./src",                                /* Set rootDir to the source folder. */
    "outDir": "./dist",                                /* Specify the output folder for emitted files. */
    "esModuleInterop": true,                           /* Enable interoperability for CommonJS modules. */
    "forceConsistentCasingInFileNames": true,          /* Ensure consistent casing in module imports. */
    "skipLibCheck": true,                              /* Skip type checking for declaration files. */
    "strict": false,                                   /* Disable strict type checking. */
    "noEmitOnError": true,                             /* Prevent emitting files if errors exist. */
    "resolveJsonModule": true,                         /* Enable importing JSON files. */
    "moduleResolution": "node",                        /* Use Node.js module resolution strategy. */
    "allowJs": true,                                   /* Allow using JavaScript files. */
    "allowSyntheticDefaultImports": true               /* Support default imports from CommonJS modules. */
  },
  "include": [
    "src/**/*",                                        /* Include all TypeScript files in src folder. */
    "types.d.ts"                                       /* Include global type declarations. */
  ],
  "exclude": [
    "node_modules",                                    /* Exclude the node_modules folder. */
    "convex/_generated/**/*"                           /* Exclude generated files from Convex. */
  ]
}
